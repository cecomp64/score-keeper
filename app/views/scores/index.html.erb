<div class="page-header">
  <%= link_to new_score_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Score
  <% end %>
  <h1>Listing scores</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Round</th>
            <th>Player</th>
            <th>Game</th>
            <th>Score</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @scores) do |score| %>
            <td><%= score.round %></td>
            <td><%= score.player_id %></td>
            <td><%= score.game_id %></td>
            <td><%= score.score %></td>
            <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
